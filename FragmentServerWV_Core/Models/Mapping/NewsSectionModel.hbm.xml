<?xml version = "1.0" encoding = "utf-8" ?>

<hibernate-mapping xmlns = "urn:nhibernate-mapping-2.2">

    <class name = "FragmentServerWV.Models.NewsSectionModel, FragmentServerWV_Core"
           table = "news_section">

        <id name = "ArticleID" column = "articleID" type = "ushort">
            <generator class="native"/>
        </id>
        <property name = "ArticleTitle" column = "articleTitle" type = "String"/>
        <property name = "ArticleBody" column = "articleBody" type = "String"/>
        <property name = "ArticleDate" column = "articleDate" type = "datetime"/>
        <property name = "IsNew" column = "isNew" type = "Boolean"/>
        <property name = "ArticleImage" column = "articleImage" type = "BinaryBlob"/>
    </class>

</hibernate-mapping>